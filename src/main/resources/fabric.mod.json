{
  "schemaVersion": 1,
  "id": "flare",
  "version": "${version}",

  "name": "Flare",
  "description": "A 1.19 utility mod",
  "authors": [
    "Aestheticall"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "GPL-3.0",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "wtf.flare.core.init.FlareInitializer"
    ],
    "server": [
      "wtf.flare.core.init.FlareServerInitializer"
    ]
  },
  "mixins": [
    "flare.mixins.json"
  ],

  "accessWidener": "flare.accesswidener",

  "depends": {
    "fabricloader": ">=0.14.9",
    "minecraft": "~1.19",
    "java": ">=17"
  }
}
